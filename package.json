{
  "name": "@typeonly/reader",
  "version": "0.2.0",
  "description": "Brings typing definitions from TypeScript at runtime.",
  "author": "tomko.team",
  "scripts": {
    "clear": "rimraf 'dist/*' 'bundle-tsd/declarations/*'",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "bundle-tsd": "node bundle-tsd/bundle-tsd",
    "build": "npm run clear && npm run tsc && npm run bundle-tsd",
    "lint": "tslint -p tsconfig.json -t verbose",
    "test:watch": "jest --watch",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/node": "^10.17.3",
    "jest": "^24.9.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typeonly": "^0.2.1",
    "typescript": "^3.6.4"
  },
  "main": "dist/api.js",
  "types": "dist/reader.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomko-team/typeonly-reader.git"
  },
  "license": "CC0-1.0",
  "keywords": [
    "typescript",
    "types",
    "runtime"
  ]
}
